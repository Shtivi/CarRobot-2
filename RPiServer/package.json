{
  "name": "rpi-server",
  "version": "1.0.0",
  "description": "A program that will run on the raspberry-pi and serve a web api to command the robot and receive data from it",
  "main": "./build/Server.js",
  "scripts": {
    "build": "tsc",
    "build_watch": "tsc -- --watch",
    "start_prod": "tsc && set NODE_ENV=PROD && node ./build/Server.js",
    "start_dev": "tsc && set NODE_ENV=DEV && node ./build/Server.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/es6-shim": "^0.31.39",
    "@types/express": "^4.16.0",
    "express": "^4.16.4",
    "typescript": "^3.1.6"
  },
  "devDependencies": {
    "@types/node": "^10.12.4"
  }
}
